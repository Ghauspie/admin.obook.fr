{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
    

        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Story</th>
                <td>{{ user.story }}</td>
            </tr>
            <tr>
                <th>Is_search_job</th>
                <td>{{ user.isSearchJob ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>

            <tr>
                <th>Picture</th>
                <td>{{ user.picture }}</td>
            </tr>
                        <tr>
                <th>Spe</th>
                <td>
                   {% for spe1 in spe %}
               {{spe1.name}} 
                 {% endfor %} </td>
              
              
            </tr>
            <tr>
                <th>Technos</th>
                <td>
                {% for techno in technos %}
                {{techno.name}} 
                {% endfor %}</td>
            </tr>
            <tr>
                <th>contrats</th>
                <td>
                {% for contrat in contrats %}
                {{contrat.name}} 
                {% endfor %}</td>
            </tr>

        </tbody>
    </table>

